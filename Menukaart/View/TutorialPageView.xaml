<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Menukaart.ViewModel"
             xmlns:model="clr-namespace:Menukaart.Model"
             x:DataType="viewmodel:TutorialPageViewModel"
             x:Class="Menukaart.View.TutorialPageView"
             Shell.NavBarIsVisible="False">
    
    <VerticalStackLayout Margin="20">

        <CarouselView ItemsSource="{Binding TutorialSections}" IndicatorView="TutorialIndicator">
            <CarouselView.ItemTemplate>
                <DataTemplate x:DataType="model:TutorialPageModel">

                    <VerticalStackLayout Spacing="20">
                        <Label Style="{StaticResource TitleText}" Text="{Binding Title}"/>
                        <Image Source="{Binding ImageName}" HeightRequest="100"/>
                        <Label Style="{StaticResource BodyText}" Text="{Binding Description}"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <HorizontalStackLayout>
            <IndicatorView x:Name="TutorialIndicator" IndicatorSize="10" IndicatorColor="{StaticResource Gray500}" SelectedIndicatorColor="{StaticResource Primary}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>